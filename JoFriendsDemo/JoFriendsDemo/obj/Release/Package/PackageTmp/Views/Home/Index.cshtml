<div class="modal fade" id="create1" role="dialog" data-backdrop="static" data-keyboard="true">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4>建立活動</h4>
            </div><hr />
            <form id="createActivity" action="/Activity/create" method="post">
                <div class="form-group">
                    <label for="email">活動分類</label>
                    <select name="category" class="select" style="width:200px;margin-right:40px">
                        <option selected value="0">分類</option>
                        <option value="1">外國語</option>
                        <option value="2">運動</option>
                    </select>
                    <input type="text" class="form-control" name="Catrgory" required="required" />
                </div>
                <div class="form-group">
                    <label for="password">活動名稱</label><hr />
                    <input type="text" class="form-control" name="ActivityName" required="required" />
                </div>
                <div class="form-group">
                    <label>活動地點</label>
                    <input type="text" class="form-control" name="ActivityLocation" required="required" />
                </div>
                <div class="form-group">
                    <label for="Time" style="font-size:20px;"><b><u>活動時間</u></b></label>
                    <label>從</label>
                    <input style="width:200px;margin-left:40px" type="date" class="form-control" name="ActivityName" required="required" placeholder="請選擇時間...">
                </div>
                <div class="form-group">
                    <label for="Time" style="font-size:20px;"></label>
                    <label>到</label>
                    <input style="width:200px;margin-left:40px" type="date" class="form-control" name="ActivityName" required="required" placeholder="請選擇時間...">
                </div>
                <div class="form-group">
                    <label>聯絡資訊</label>
                    <input type="text" class="form-control" name="contact" required="required" />
                </div>
                <div class="form-group">
                    <label for="comment">內容摘要</label>
                    <textarea name="comment" class="form-control" rows="5" id="comment" style="width:400px;margin-left:40px"></textarea>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" data-dismiss="modal">我要開團</button>
                        <button type="reset" class="btn btn-primary" data-dismiss="modal"> 重設</button>
                    </div>
                </div>
           </form>
         </div>
       </div>
    </div>
