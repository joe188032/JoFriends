
@{
    ViewBag.Title = "RegisterView";
}

<div style="text-align:center">
<h2>以您的電子郵件註冊</h2>
<form action="~/User/Register" method="post">
    <input type="email" name="Account" required="required" placeholder="請填入您的Email"/><br />
    <input type="password" name="Password"  required="required" placeholder="請填入您的密碼"/><br />
    <input type="text" name="NickName" required="required" placeholder="您的暱稱"/><br />
    <input type="text" name="Name" required="required" placeholder="姓名"/><br />
    <input type="text" name="Birthday" required="required" placeholder="生日(格式 : 西元年/日/月)"/><br />
    <input type="text" name="Mobile" required="required" placeholder="手機"/><br />
    <input type="text" name="Address" required="required" placeholder="地址"/><br /><br />
    <input type="submit" value="註冊" class="btn btn-primary" />
</form>
</div>
<hr />


