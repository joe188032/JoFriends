                        <option value="9">文青集散地</option>
                        <option value="10">時尚</option>
                        <option value="11">旅遊</option>
                        <option value="12">長照</option>
                        <option value="13">官方活動</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="password">活動名稱</label><hr />
                    <input type="text" class="form-control" name="ActivityName" required="required" />
                </div>
                <div class="form-group">
                    <label>活動地點</label>
                    <input type="text" class="form-control" name="ActivityLocation" required="required" />
                </div>
                <div class="form-group">
                    <label for="Time" style="font-size:20px;"><b><u>活動時間</u></b></label><br />
                    <label for="Time" style="font-size:20px;"></label>
                    <input style="width:200px;margin-left:40px" type="date" class="form-control" name="StartTime" required="required" placeholder="請選擇時間...">
                    <label for="Time" style="font-size:20px;"></label>
                    <input style="width:200px;margin-left:40px" type="date" class="form-control" name="EndTime" required="required" placeholder="請選擇時間...">
                </div>
                <div class="form-group">
                    <label>聯絡資訊</label>
                    <input type="text" class="form-control" name="Contact" required="required" placeholder="手機、Email"/>
                </div>
                <div class="form-group">
                    <label for="comment">內容摘要</label>
                    <textarea name="Content" class="form-control" rows="5" id="comment" style="width:400px;margin-left:40px"></textarea>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="我要開團"/>
                        <input type="reset" class="btn btn-primary" data-dismiss="modal" value="重設">
                    </div>
                </div>
           </form>
         </div>
       </div>
    </div>
